# Clinical AI Assistant - Production Environment Configuration
# SECURITY WARNING: Never commit actual production credentials to version control!
# Copy this file to .env in your deployment environment and set real values

# ===========================================
# DATABASE CONFIGURATION (PRODUCTION)
# ===========================================
# Production Database Credentials - USE STRONG PASSWORDS!
DB_USER=clinicalai_user
DB_PASSWORD=CHANGE_ME_MINIMUM_32_CHARS_RANDOM_STRING
SA_PASSWORD=CHANGE_ME_MINIMUM_32_CHARS_RANDOM_STRING

# Database Connection Pool
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# ===========================================
# AI SERVICE CONFIGURATION
# ===========================================
# AI Provider API Keys - REQUIRED for production
ANTHROPIC_API_KEY=CHANGE_ME_your-anthropic-api-key
OPENAI_API_KEY=CHANGE_ME_your-openai-api-key
GOOGLE_API_KEY=CHANGE_ME_your-google-api-key

# Ollama is available internally via docker network
OLLAMA_BASE_URL=http://ollama:11434

# ===========================================
# SECURITY CONFIGURATION (PRODUCTION)
# ===========================================
# Application Secret Key - MUST BE RANDOM AND SECURE!
# Generate with: openssl rand -base64 64
SECRET_KEY=CHANGE_ME_MINIMUM_64_CHARS_RANDOM_STRING

# Session Configuration
SESSION_TIMEOUT=3600
COOKIE_SECURE=true
COOKIE_SAMESITE=strict

# ===========================================
# REDIS CONFIGURATION (PRODUCTION)
# ===========================================
# Redis Password - USE STRONG PASSWORD!
REDIS_PASSWORD=CHANGE_ME_MINIMUM_32_CHARS_RANDOM_STRING
REDIS_URL=redis://redis:6379/0
CACHE_TTL=600
CACHE_ENABLED=true

# ===========================================
# MONITORING CREDENTIALS (PRODUCTION)
# ===========================================
# Grafana Admin Password - USE STRONG PASSWORD!
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_MINIMUM_32_CHARS_RANDOM_STRING

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
# Environment
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# CORS Configuration - SET TO YOUR ACTUAL DOMAINS!
CORS_ORIGINS=["https://yourdomain.com","https://www.yourdomain.com"]
CORS_ALLOW_CREDENTIALS=true

# ===========================================
# PERFORMANCE CONFIGURATION
# ===========================================
# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Worker Configuration
WORKERS=4
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100

# ===========================================
# BACKUP CONFIGURATION
# ===========================================
# Backup Schedule (cron format)
BACKUP_SCHEDULE=0 2 * * *
RETENTION_DAYS=30

# ===========================================
# MONITORING AND LOGGING
# ===========================================
MONITORING_ENABLED=true
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# Logging
LOG_FORMAT=json
LOG_FILE=/app/logs/clinical_ai_production.log
LOG_MAX_SIZE=500MB
LOG_BACKUP_COUNT=10
