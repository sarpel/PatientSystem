# Clinical AI Assistant - Development Environment Configuration
# Development and testing settings with local services

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# For local development with Windows Authentication and named instance HIZIR
# Use TestDB for development (or create ClinicalAI_DEV database)
DATABASE_URL=mssql+pyodbc://localhost\\HIZIR/TestDB?driver=ODBC+Driver+17+for+SQL+Server&trusted_connection=yes

# Alternative: If using SQL Server Authentication
# DATABASE_URL=mssql+pyodbc://localhost\\HIZIR/ClinicalAI_DEV?driver=ODBC+Driver+17+for+SQL+Server&UID=clinicalai_dev&PWD=DevPassword123&TrustServerCertificate=yes
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=5
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600
DATABASE_ECHO=false

# ===========================================
# AI SERVICE CONFIGURATION
# ===========================================
# Optional: Configure external AI services
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
GOOGLE_API_KEY=

# Local AI Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=gemma:7b
OLLAMA_TIMEOUT=60

# AI Routing Strategy (smart/cost_optimized/quality_first)
AI_ROUTING_STRATEGY=smart
AI_ENABLE_FALLBACK=true
AI_TIMEOUT=30
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=2000

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
# Application Settings
DEBUG=true
LOG_LEVEL=DEBUG
ENVIRONMENT=development

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_RELOAD=true

# CORS Configuration (Development allows all origins)
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","http://localhost:8080","http://127.0.0.1:3000","http://127.0.0.1:5173"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET","POST","PUT","DELETE","OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# Session and Authentication
SECRET_KEY=dev-secret-key-change-in-production-please-use-strong-random-string
SESSION_TIMEOUT=3600
COOKIE_SECURE=false
COOKIE_SAMESITE=lax

# Rate Limiting (relaxed for development)
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600

# ===========================================
# MONITORING AND LOGGING
# ===========================================
# Logging Configuration
LOG_FORMAT=detailed
LOG_FILE=logs/clinical_ai_dev.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# Monitoring Settings
MONITORING_ENABLED=true
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# ===========================================
# CACHE CONFIGURATION
# ===========================================
# Redis Configuration (Optional for development)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=DevRedis123
CACHE_TTL=300
CACHE_ENABLED=false  # Disabled for simplicity in dev

# ===========================================
# PERFORMANCE CONFIGURATION
# ===========================================
# Connection Limits
MAX_CONCURRENT_REQUESTS=100
MAX_REQUESTS_PER_MINUTE=1000
REQUEST_TIMEOUT=60

# Async Configuration
ASYNC_POOL_SIZE=10
MAX_ASYNC_TASKS=50

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================
# Web Frontend Development
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000/ws
VITE_DEBUG=true
VITE_HOT_RELOAD=true

# ===========================================
# TESTING CONFIGURATION
# ===========================================
# Test Settings
TEST_DATABASE_URL=mssql+pyodbc://localhost\\HIZIR/TestDB?driver=ODBC+Driver+17+for+SQL+Server&trusted_connection=yes
TEST_AI_RESPONSE_MOCK=true
TEST_EXTERNAL_SERVICES=false

# Coverage Settings
TEST_COVERAGE_MINIMUM=70
TEST_PARALLEL_WORKERS=4

# ===========================================
# DEVELOPMENT TOOLS
# ===========================================
# Development Server Settings
AUTO_RELOAD=true
PROFILING_ENABLED=false
DEBUG_SQL=false

# Hot Module Replacement
HMR_ENABLED=true
HMR_PORT=5173

# ===========================================
# LOCAL PATHS
# ===========================================
# File System Paths
DATA_DIR=./data
LOG_DIR=./logs
CACHE_DIR=./cache
UPLOAD_DIR=./uploads
TEMP_DIR=./temp

# ===========================================
# EXTERNAL INTEGRATIONS
# ===========================================
# External Service URLs
EXTERNAL_API_BASE_URL=http://localhost:8001
NOTIFICATION_SERVICE_URL=http://localhost:8002

# Integration Settings
EXTERNAL_SERVICE_TIMEOUT=30
EXTERNAL_SERVICE_RETRIES=3
EXTERNAL_SERVICE_ENABLED=false